<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventSelect">

    <!--ActionBar-->
    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:padding="16dp">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/back_arrow"
            android:fontFamily="sans-serif-condensed"
            android:text="Select an event"
            android:textColor="@color/white"
            android:textSize="25sp" />

    </RelativeLayout>

    <!--Event-->
    <RelativeLayout
        android:id="@+id/event1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/action_bar"
        android:padding="10dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="The time is Time"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/text1"
            android:background="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/event2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event1"
        android:padding="10dp">

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="It's sunset at Location"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/text2"
            android:background="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/event3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event2"
        android:padding="10dp">

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="It's sunrise at Location"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/text3"
            android:background="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/event4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event3"
        android:padding="10dp">

        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="It's 15 minutes before sunrise at Location"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/text4"
            android:background="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/event5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event4"
        android:padding="10dp">

        <TextView
            android:id="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="It's 15 minutes after sunrise at Location"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/text5"
            android:background="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/event6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event5"
        android:padding="10dp">

        <TextView
            android:id="@+id/text6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/black"
            android:text="It's 15 minutes before sunset at Location"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/text6"
            android:background="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/event7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event6"
        android:padding="10dp">

        <TextView
            android:id="@+id/text7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/black"
            android:text="It's 15 minutes after sunset at Location"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/text7"
            android:textColor="@color/black" />

    </RelativeLayout>

</RelativeLayout>